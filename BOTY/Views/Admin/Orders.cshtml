
@{
    ViewData["Title"] = "Orders";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Orders</h1>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Customer Name</th>
        <th>Address</th>
        <th>Date Ordered</th>
        <th>Date Shipped</th>
        <!--<th class="text-center">EDIT</th>-->
        <th class="text-center">SHIP</th>
        <th class="text-center">DELETE</th>
    </tr>
    </thead>

    <tbody>
    @for (int i = 0; i < @ViewBag.Count; i++)
    {
        <tr>
            <td>@ViewBag.NameAddress[i].firstName @ViewBag.NameAddress[i].lastName</td>
            <td>@ViewBag.NameAddress[i].address</td>
            <td>@ViewBag.DatesIds[i].dateOrdered</td>
            <td>@ViewBag.DatesIds[i].dateShipped</td>
            <td class="text-center">
                <a class="btn btn-primary d-flex align-items-center justify-content-center" asp-area="" asp-controller="Admin" asp-action="Ship" asp-route-id="@ViewBag.DatesIds[i].Id">SHIP</a>
            </td>
            <td class="text-center">
                <a class="btn btn-primary d-flex align-items-center justify-content-center" asp-area="" asp-controller="Admin" asp-action="OrderDelete" asp-route-id="@ViewBag.DatesIds[i].Id">DELETE</a>
            </td>
        </tr>
    }
    </tbody>
</table>