@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="d-flex justify-content-between p-1">
    <h1>Products</h1>
    <a class="btn btn-primary d-flex align-items-center justify-content-center" asp-area="" asp-controller="Admin" asp-action="ShoeCreate">Add Product</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Information</th>
            <th>Manufacturer</th>
            <th>Material</th>
            <th>Code</th>
            <th class="text-center">EDIT</th>
            <th class="text-center">VARIATIONS</th>
            <th class="text-center">DELETE</th>
        </tr>
    </thead>

    <tbody>
    @foreach (var item in @ViewBag.Products)
    {
        <tr>
            <td>@item.name</td>
            <td style="max-width: 200px; text-overflow:ellipsis; white-space: nowrap; overflow:hidden">@item.description</td>
            <td>@item.information</td>
            <td>@item.manufacturer</td>
            <td>@item.material</td>
            <td>@item.code</td>
            <td class="text-center">
                <a class="btn btn-primary d-flex align-items-center justify-content-center" asp-area="" asp-controller="Admin" asp-action="ShoeEdit" asp-route-id="@item.Id">EDIT</a>
            </td>
            <td class="text-center">
                <a class="btn btn-primary d-flex align-items-center justify-content-center" asp-area="" asp-controller="Admin" asp-action="Variant" asp-route-id="@item.Id">VARIATIONS</a>
            </td>
            <td class="text-center">
                <a class="btn btn-primary d-flex align-items-center justify-content-center" asp-area="" asp-controller="Admin" asp-action="ShoeDelete" asp-route-id="@item.Id">DELETE</a>
            </td>
        </tr>
    }
    </tbody>
</table>