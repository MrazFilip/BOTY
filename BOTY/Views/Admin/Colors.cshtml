
@{
    ViewData["Title"] = "Colors";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using BOTY.Models.Tables
@model Color

<h1>Colors</h1>

<form asp-action="ColorCreate" class="d-flex flex-row align-items-center justify-content-between">
    <div class="p-2">
        <div><label asp-for="name">Name:</label></div>
        <div><input required asp-for="name" class="form-control"></div>
    </div>
    <div class="p-2">
        <div><label asp-for="code">Code:</label></div>
        <div><input required asp-for="code" class="form-control"></div>
    </div>
    <button type="submit" class="btn btn-success">SAVE</button>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Code</th>
            <th class="text-center">DELETE</th>
        </tr>
    </thead>

    <tbody>
    @foreach (var item in @ViewBag.Colors)
    {
        <tr>
            <td class="w-25">@item.name</td>
            <td class="w-25">@item.code</td>
            <td class="text-center w-50">
                <a class="btn btn-primary d-flex align-items-center justify-content-center" asp-area="" asp-controller="Admin" asp-action="ColorDelete" asp-route-id="@item.id">DELETE</a>
            </td>
        </tr>
    }
    </tbody>
</table>